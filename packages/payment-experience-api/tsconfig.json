{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "@verkkokauppa/core": [
                "../core"
            ],
            "@verkkokauppa/order-backend": [
                "../order-backend"
            ],
            "@verkkokauppa/payment-backend": [
                "../payment-backend"
            ],
            "@verkkokauppa/configuration-backend": [
                "../configuration-backend"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../core"
        },
        {
            "path": "../order-backend"
        },
        {
            "path": "../payment-backend"
        },
        {
            "path": "../configuration-backend"
        }
    ]
}