{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "@verkkokauppa/product-backend": [
                "../product-backend"
            ],
            "@verkkokauppa/price-backend": [
                "../price-backend"
            ],
            "@verkkokauppa/cart-backend": [
                "../cart-backend"
            ],
            "@verkkokauppa/core": [
                "../core"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../product-backend"
        },
        {
            "path": "../price-backend"
        },
        {
            "path": "../cart-backend"
        },
        {
            "path": "../core"
        }
    ]
}